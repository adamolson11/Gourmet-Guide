<div class="login-container container mt-5">
  <div class="row">
    <div class="col-md-6 mx-auto bg-primary rounded"> <!-- this rounds it out -->
      <h2>Login</h2>
      <form class="form login-form">
        <div class="form-group">
          <label for="email-login">Email:</label>
          <input class="form-control" type="text" id="email-login" />
        </div>
        <div class="form-group">
          <label for="password-login">Password:</label>
          <input class="form-control" type="password" id="password-login" />
        </div>
        <div class="form-group">
          <button class="btn btn-primary" type="submit">Login</button>
        </div>
      </form>
      <div>
        <p>Don't have an account? <a href="/signup">Sign up here!</a></p>
      </div>
    </div>
  </div>
</div>
