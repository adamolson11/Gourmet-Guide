<main class="container container-fluid mt-5">

<h1 class="page-title">Current Users:</h1>
 
  {{#each users as |user| }}
  <div class="row align-center mb-4 bg-secondary text-light rounded">
    <div class="col-md p-3">
      <h2>{{{get_emoji}}} {{user.username}}</h2>
    </div>
    <div class="col-md">
      <h3 class="text-light"><a href="mailto:{{user.email}}">{{user.email}}</a></h3>
    </div>
  </div>
  {{/each}}
</main>

<div>
<div class="text-center mt-5">
  <h1 class="text-white welcome-message">Welcome to Gourmet Guide</h1>
  <p class="text-white welcome-message">Discover delicious recipes from fellow food enthusiasts.</p>
</div>
