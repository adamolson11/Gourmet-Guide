<div class="text-center bg-primary bg-gradient p-4 mb-5">
    <h1 class="text-light">All Recipes</h1>
</div>
<div class="container text-center">
    <div class="row align-items-start">
        {{#each allRecipes}}
            <div class="col-6">
                <a href="/recipe/{{id}}" class="text-decoration-none">
                     <div class="card card-body col bg-primary bg-gradient text-light shadow">
                        <h2 class="card-title">{{name}}</h2>
                        <p class="card-text">{{description}}</p>
                    </div>
                </a>
            </div>
        {{/each}}
    </div>
</div>
